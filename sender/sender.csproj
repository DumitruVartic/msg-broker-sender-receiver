<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.21.12" />
    <PackageReference Include="Grpc.Net.Client" Version="2.56.0" />
    <PackageReference Include="Grpc.Tools" Version="2.56.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <!-- This will generate C# client and server code based on the proto file -->
    <Protobuf Include="..\proto\message_broker.proto" GrpcServices="Both" />
  </ItemGroup>

</Project>
